</div>
<div class="side-bar">
    <a href="http://wpa.qq.com/msgrd?V=1&amp;Uin=@ConfigManager.GetConfig("QQ")&amp;Site=香草物语&Menu=yes" class="icon-qq">QQ在线咨询</a>
    <a href="" class="icon-chat">微信<div class="chat-tips"><i></i><img style="width:138px;height:138px;" src="~/images/weixin.jpg" alt="扫码加微信"></div>微信咨询</a>
    <a target="_blank" href="@ConfigManager.GetConfig("weibo")" class="icon-blog">微博</a>
    <a href="@ConfigManager.GetConfig("Email")" class="icon-mail">邮箱</a>
</div>
<div class="row">
    <h3 class="productblock-title">随便看看</h3>
    <div class="scroller demo1">
        <div class="inside">
            @{
                string randomProductImg = "";
            }

            @foreach (Product product in randomProducts)
            {
                randomProductImg += "<a href='/Product/ViewProduct/" + product.ID + "'><img style='width:auto;height:auto;max-width:100%;max-height:100%' src='/UploadImage/" + product.Picture + "' alt=''/></a>";
            }
            @if (randomProducts.Count < 15)
            {
                for (int i = 1; i < 15 - randomProducts.Count; i++)
                {
                    randomProductImg += "<a href='#'><img style='width:auto;height:auto;max-width:100%;max-height:100%' src='/UploadImage/Random/img" + i+ ".jpg '" + " alt=''/></a>";
                }
            }
            @Html.Raw(randomProductImg)
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(function () {
            //淘宝购买
            $("button[name='btntaobao']").click(function () {
                window.location.href = $(this)[0].id;
            });
            //微店购买
            $("button[name='btnweidian']").click(function () {
                window.location.href = $(this)[0].id;
            });
            if ($.cookie('isAdClose') == 'true') {
                setTimeout(function () { $("#toubiao").hide('slow') }, 5000);
            }
        });
    </script>
    <script type="application/javascript" src="~/js/jquery.mgang.small2big.js"></script>
    <script src="~/lib/scroller/js/jquery.easing.js" type="text/javascript"></script>
    <script src="~/lib/scroller/js/scroller.js" type="text/javascript"></script>
    <script src="~/lib/scroller/js/init.js" type="text/javascript"></script>
}